---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Portafolio de José Luis Sánchez Mendoza"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Lekton:ital,wght@0,400;0,700;1,400&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen md:overflow-hidden relative">
		<video
			src="/bg.mp4"
			autoplay
			muted
			loop
			class="absolute z-0 w-screen h-screen object-cover"></video>
		<slot />
	</body>
</html>
<style is:global>
	html {
		background-color: #0a101e !important;
		font-family: 'Lekton', 'Courier New', Courier, monospace;
		font-weight: 600;
	}

	:root {
		--principal: #f8d38d;
		--blanco: #fff;
		--black: #000;
	}
</style>
